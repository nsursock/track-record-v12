---
layout: base.njk
title: Executive Assistant
---

<div x-data="calendarComponent()" x-init="initCalendar()" class="container mx-auto px-4 py-8 mt-20">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4">Executive Assistant</h1>
    <p class="text-lg opacity-80">Your strategic roadmap for success</p>
  </div>

  <!-- Calendar View -->
  <div class="max-w-6xl mx-auto">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div id="calendar-custom" class="w-full"></div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div 
    x-show="showModal" 
    id="calendar-event-modal" 
    class="overlay modal" 
    role="dialog" tabindex="-1"
    @keydown.escape.window="closeModal"
    x-transition
    style="display: none;"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" x-text="modalTitle"></h3>
          <button type="button" class="btn btn-text btn-circle btn-sm absolute end-3 top-3" @click="closeModal" aria-label="Close"><span class="icon-[tabler--x] size-4"></span></button>
        </div>
        <form @submit.prevent="saveEvent">
          <div class="modal-body pt-0">
            <div class="mb-4">
              <label class="label-text" for="eventTitle"> Add event title below </label>
              <input type="text" id="eventTitle" class="input" x-model="eventTitle" placeholder="Event title" required />
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-soft btn-secondary" @click="closeModal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Fallback for non-internal access -->
<div x-show="!$store.landing.showInternal" class="min-h-screen flex items-center justify-center">
  <div class="text-center px-4">
    <h1 class="text-4xl font-bold mb-4">Access Restricted</h1>
    <p class="text-lg opacity-80">This page is only available for internal access.</p>
  </div>
</div>

