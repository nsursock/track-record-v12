<div class="min-h-screen py-12 px-4 mx-auto max-w-screen-xl">
  <!-- Header -->
  <header class="mb-12 text-center">
    <div class="w-24 h-24 mx-auto bg-gradient-to-br from-primary/20 to-secondary/20 rounded-xl flex items-center justify-center mb-6">
      <span class="icon-[tabler--shield-check] size-12 text-primary"></span>
    </div>
    <h1 class="text-4xl font-bold text-primary mb-3">Admin Dashboard</h1>
    <p class="text-base-content/70 text-lg max-w-2xl mx-auto">
      Welcome to the administrative control panel. Manage your blog content and user interactions.
    </p>
  </header>

  <!-- Admin Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
    <div class="stat bg-base-200 shadow rounded-box">
      <div class="stat-figure text-primary">
        <span class="icon-[tabler--message-circle] size-8"></span>
      </div>
      <div class="stat-title">Total Comments</div>
      <div class="stat-value text-primary">--</div>
      <div class="stat-desc">Across all posts</div>
    </div>
    
    <div class="stat bg-base-200 shadow rounded-box">
      <div class="stat-figure text-warning">
        <span class="icon-[tabler--clock] size-8"></span>
      </div>
      <div class="stat-title">Pending Review</div>
      <div class="stat-value text-warning">--</div>
      <div class="stat-desc">Awaiting moderation</div>
    </div>
    
    <div class="stat bg-base-200 shadow rounded-box">
      <div class="stat-figure text-success">
        <span class="icon-[tabler--check-circle] size-8"></span>
      </div>
      <div class="stat-title">Approved</div>
      <div class="stat-value text-success">--</div>
      <div class="stat-desc">Published comments</div>
    </div>
  </div>

