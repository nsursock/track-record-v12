<div x-data="landingPage">
  <div class="w-full overflow-x-hidden">
    <!-- Coming Soon Page (Default) -->
    <div x-cloak x-show="!$store.landing.showInternal" class="min-h-screen flex items-center justify-center bg-base-100 w-full">
      <div class="text-center px-4 sm:px-8 max-w-2xl mx-auto w-full">
        <!-- Fish bone icon -->
        <div class="mb-8 flex justify-center">
          <span class="icon-[tabler--fish-bone] size-32 text-primary"></span>
        </div>

        <h1 class="text-4xl sm:text-6xl font-bold text-base-content mb-4 tracking-tight">{{ site.title }}</h1>
        <p class="text-xl sm:text-2xl text-primary mb-8 font-light">{{ site.tagline }}</p>
        <p class="text-base sm:text-lg text-base-content/80 mb-12 leading-relaxed">{{ site.description }}</p>

        <div class="bg-base-200/50 backdrop-blur-sm  p-6 sm:p-8 border border-primary/20">
          <h2 class="text-xl sm:text-2xl font-semibold text-base-content mb-4">Coming Soon</h2>
